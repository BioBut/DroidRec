<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/floatingpanel_shape"
    android:gravity="left"
    android:id="@+id/panelwithbackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/panelwrapped">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/recordpausebuttonfloating"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_pause_color_action_normal" />

            <ImageButton
                android:id="@+id/recordresumebuttonfloating"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_record_continue_color_action_normal"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/recordstopbuttonfloating"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_stop_color_action_normal" />

        </LinearLayout>

        <Chronometer
            android:id="@+id/timerrecordfloating"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:countDown="false"
            android:textSize="6pt"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <ImageView
        android:id="@+id/floatingpanelhandle"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@drawable/floatingpanel_shape" />

</LinearLayout>
